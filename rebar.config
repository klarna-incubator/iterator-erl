{erl_opts, [debug_info]}.

{deps, []}.

{project_plugins, [
    erlfmt,
    rebar3_proper
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.4.0"}
        ]}
    ]}
]}.

{erlfmt, [
    write,
    {print_width, 100},
    {files, [
        "{src,test}/*.{hrl,erl}",
        "src/*.app.src",
        "rebar.config"
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    %% exports_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [
        unknown
    ]}
]}.
